<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.circularreveal.CircularRevealRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Spillet"

    android:orientation="vertical">


  <TableLayout
      android:id="@+id/tbl_gaetOrd"
      android:layout_width="match_parent"
      android:layout_height="80dp"

      android:layout_weight="1"
      >
    <TextView
          android:id="@+id/gaette_ord"
          android:layout_width="match_parent"
          android:layout_height="match_parent"


          android:text="det der skal gættes"
          android:gravity="center"
          android:textAllCaps="false"
          android:textColor="@android:color/black"
          android:textSize="30sp"
        />
  </TableLayout>

  <LinearLayout
      android:id="@+id/layout_1"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/tbl_gaetOrd"
      android:gravity="center"
      android:orientation="vertical">
  <ImageView
      android:id="@+id/galgen"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/tbl_gaetOrd"

      app:srcCompat="@drawable/galge" />

    <TextView
        android:id="@+id/ProeveOrd"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_marginTop="20dp"
        android:text="brugte bogstaver: "
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/ForkerteOrd"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_marginTop="20dp"
        android:text="forkerte bogstaver: "
        android:textAllCaps="false"
        android:textColor="@color/red"
        android:textSize="20sp" />

  <EditText
      android:id="@+id/editTextTextPersonName"
      android:layout_width="wrap_content"
      android:gravity="center"
      android:layout_height="wrap_content"
      android:layout_marginTop="30dp"
      android:ems="6"
      android:inputType="textPersonName"
      android:hint="indsæt et ord" />

  </LinearLayout>

</com.google.android.material.circularreveal.CircularRevealRelativeLayout>