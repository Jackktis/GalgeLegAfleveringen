<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.circularreveal.CircularRevealRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"

    android:orientation="vertical">


  <TableLayout
      android:id="@+id/tbl_gaetOrd"
      android:layout_width="match_parent"
      android:layout_height="80dp"

      android:layout_weight="1"
      >
    <TextView
          android:id="@+id/gaette_ord"
          android:layout_width="match_parent"
          android:layout_height="match_parent"


          android:text="det der skal gættes"
          android:gravity="center"
          android:textAllCaps="false"
          android:textColor="@android:color/black"
          android:textSize="30sp"
        />
  </TableLayout>

  <LinearLayout
      android:id="@+id/layout_1"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/tbl_gaetOrd"
      android:gravity="center"
      android:orientation="vertical">
  <ImageView
      android:id="@+id/galgen"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/tbl_gaetOrd"

      app:srcCompat="@drawable/galge" />

  <LinearLayout
      android:id="@+id/LLBrugteOrd"
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:layout_marginTop="20dp"
      android:layout_below="@+id/galgen"

      android:orientation="horizontal">

    <TextView
        android:id="@+id/txtProeveOrd"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/Brugte_ord"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:layout_marginRight="4dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/TWgættetOrd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20sp" />

  </LinearLayout>

  <LinearLayout
      android:id="@+id/LLForkertOrd"
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:layout_below="@+id/txtProeveOrd"
      android:orientation="horizontal">

    <TextView
        android:id="@+id/txtForkerteOrd"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/Forkerte_ord"
        android:textAllCaps="false"
        android:textColor="@color/red"
        android:layout_marginRight="4dp"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/TWForkertOrd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAllCaps="false"
        android:textColor="@color/red"
        android:textSize="20sp" />


  </LinearLayout>


  <EditText
      android:id="@+id/ETGætBogstav"
      android:layout_width="wrap_content"
      android:gravity="center"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:ems="6"
      android:textColor="@color/black"
      android:textColorHint="@color/black"
      android:inputType="textPersonName"
      android:hint="indsæt et ord"
      android:maxLength="1"/>

  </LinearLayout>

</com.google.android.material.circularreveal.CircularRevealRelativeLayout>