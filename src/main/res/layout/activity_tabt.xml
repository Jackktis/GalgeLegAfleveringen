<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:paddingTop="0dp">
    <ImageView
        android:id="@+id/tabtIMG"
        android:layout_width="409dp"
        android:layout_height="312dp"
        android:layout_marginTop="28dp"
        app:srcCompat="@drawable/you_died" />

    <LinearLayout
        android:id="@+id/LLordetDuSkulleGætte"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/tabtIMG"
        android:layout_marginTop="26dp"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/txtdetRigtigOrd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="4dp"
            android:text="Det rigtig ord er: "
            android:textAllCaps="false"
            android:textColor="@color/red"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/TWDetRigtigOrd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=" "
            android:textAllCaps="false"
            android:textColor="@color/red"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LLprøvIgen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LLordetDuSkulleGætte"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:gravity="center"
        >

        <Button
            android:id="@+id/BTPrøvIgen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LLordetDuSkulleGætte"
            android:backgroundTint="#811212"
            android:text="Prøv Igen"
            android:textColor="@color/red"
            android:textSize="20sp" />

    </LinearLayout>
</RelativeLayout>